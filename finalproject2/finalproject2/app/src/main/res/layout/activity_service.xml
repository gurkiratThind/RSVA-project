<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ServiceActivity">
    <TextView
        android:id="@+id/tv_sevices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Services"
        android:textSize="50dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="30dp"
        android:textColor="#270127"
        android:outlineAmbientShadowColor="@color/white"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/tv_key_lost_service"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="40dp"
        android:textSize="40dp"
        android:text="Key Lost"
        android:textColor="#F6DEC6"
        android:background="#480048"
        android:outlineProvider="background"
        android:layout_margin="2dp"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/tv_toe_service"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="40dp"
        android:textSize="40dp"
        android:textColor="#F6DEC6"
        android:background="#480048"
        android:layout_margin="2dp"
        android:clickable="true"
        android:text="Toe Service" />

    <TextView
        android:id="@+id/tv_flatTire_service"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="40dp"
        android:textSize="40dp"
        android:textColor="#F6DEC6"
        android:background="#480048"
        android:layout_margin="2dp"
        android:clickable="true"
        android:text="FlatTire" />
    <TextView
        android:id="@+id/tv_repairing"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="40dp"
        android:textSize="40dp"
        android:textColor="#F6DEC6"
        android:background="#480048"
        android:layout_margin="2dp"
        android:clickable="true"
        android:text="Repair" />
</LinearLayout>
</ScrollView>