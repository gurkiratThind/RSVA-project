<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:id="@+id/mcshopimage"
        android:padding="@dimen/_1sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/mcshopname"
        android:layout_toRightOf="@id/mcshopimage"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"
        android:padding="@dimen/_1sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/mcshopaddress"
        android:layout_toRightOf="@id/mcshopimage"
        android:layout_below="@id/mcshopname"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        android:padding="@dimen/_1sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mcshopopentime"
        android:layout_toRightOf="@id/mcshopimage"
        android:layout_below="@id/mcshopaddress"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        android:padding="@dimen/_1sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mcshopclosetime"
        android:layout_toRightOf="@id/mcshopopentime"
        android:layout_below="@id/mcshopaddress"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        android:layout_marginRight="@dimen/_2sdp"
        android:padding="@dimen/_1sdp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mcshopbasicrate"
        android:layout_toRightOf="@id/mcshopopentime"
        android:layout_below="@id/mcshopopentime"
        android:gravity="end"
        android:layout_marginTop="@dimen/_4sdp"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        android:layout_marginRight="@dimen/_2sdp"
        android:padding="@dimen/_1sdp"
        />


</RelativeLayout>