<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appcolor"
    tools:context=".SelectActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Select Vehicle "
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:id="@+id/txt"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:id="@+id/rel1">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/bikeimage"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/bike"
            app:civ_border_width="2dp"
           android:padding="5dp"
            android:layout_marginRight="20dp"
            app:civ_border_color="#FF000000"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/carimage"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/cars"
            android:layout_toRightOf="@+id/bikeimage"
            app:civ_border_width="2dp"
            android:padding="5dp"

            android:layout_marginLeft="20dp"
            app:civ_border_color="#FF000000"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel1"
        android:layout_marginTop="20dp"
        >
        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/selectBike"
            android:background="@drawable/bg_dropdown"
            android:layout_marginLeft="50dp"

            android:visibility="gone"
            android:layout_marginRight="70dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:layout_below="@id/selectBike"

            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/vehiclemodel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:visibility="gone"
                android:hint="Model Name"/>
        </com.google.android.material.textfield.TextInputLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/searchbtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="Search Mechanics Nearby"/>

    </RelativeLayout>

</RelativeLayout>