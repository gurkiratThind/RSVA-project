<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MechanicInfo">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_220sdp"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/welcomtwo"
        android:id="@+id/selectedmcimg1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectedmcimg1"
        android:id="@+id/selectedmcshopname"
        android:gravity="center"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/black">


    </TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_below="@+id/selectedmcshopname"
        android:id="@+id/vw"
        android:layout_marginRight="@dimen/_2sdp">

    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vw"
        android:layout_marginTop="@dimen/_6sdp"
        android:id="@+id/rel1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:id="@+id/selectedmcpersonimage"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/appcolor"
            android:padding="@dimen/_2sdp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/selectedmcpersonimage"
           android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_32sdp"
            android:textSize="@dimen/_15sdp"
            android:id="@+id/selectedmechname"
            android:textColor="@color/black"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        android:layout_below="@id/rel1"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:id="@+id/selectedmcaddress"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Rate::"
        android:id="@+id/br"
        android:layout_below="@id/selectedmcaddress"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Rate::"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/selectedmcbasicrate"
        android:layout_below="@id/selectedmcaddress"
        android:layout_toRightOf="@id/br"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_5sdp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectedmcbasicrate"
        android:id="@+id/rel2"
        android:layout_marginTop="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timmings:: "
            android:id="@+id/time"
            android:layout_marginLeft="@dimen/_10sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/time"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/selectedmctimmings"
            />


    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:layout_alignParentBottom="true"
    >
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="Send Request"
        android:textAlignment="center"
        android:id="@+id/sendrequest"
        tools:ignore="RtlCompat" />
</RelativeLayout>
</RelativeLayout>